<?xml version="1.0"?>
<Project ToolsVersion="4.0" DefaultTargets="ExecuteCustomTask"
    xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildProjectDirectory)\..\Common.props" />
  
  <UsingTask TaskName="Hello" AssemblyFile="$(HelloTaskAssemblyFile)" />
  
  <Target Name="ExecuteCustomTask" DependsOnTargets="GenerateHelloTaskProject">
    <Hello />
    <Message Text="ExecuteCustomTask successful." />
  </Target>
</Project>