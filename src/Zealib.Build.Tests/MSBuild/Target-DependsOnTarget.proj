<?xml version="1.0"?>
<Project ToolsVersion="4.0" DefaultTargets="Target-DependsOnTarget"
    xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildProjectDirectory)\..\Common.props" />
  
  <Target Name="BeforeAction">
    <PropertyGroup>
      <BeforeValue>True</BeforeValue>
    </PropertyGroup>
    <Message Text="BeforeValue = $(BeforeValue)" />
  </Target>
  
  <Target Name="Target-DependsOnTarget" DependsOnTargets="BeforeAction">
    <Error Condition="$(BeforeValue) != True" Text="Invalid status." Code="1" />
    
    <Message Text="Target-DependsOnTarget successful." />
  </Target>
</Project>