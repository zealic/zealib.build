<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
    DefaultTargets="Build">
  <PropertyGroup>
    <TargetDir>$(MSBuildProjectDirectory)\target\</TargetDir>
  </PropertyGroup>
  
  <ItemGroup>
    <ProjectToBuild Include="
      $(MSBuildProjectDirectory)\MSBuild\*.proj;
      $(MSBuildProjectDirectory)\Zealib.Build*\*.proj" />
  </ItemGroup>
  
  <Target Name="Clean">
    <RemoveDir Directories="$(TargetDir)" />
  </Target>
  
  <Target Name="Build" DependsOnTargets="Clean">
     <MSBuild Projects="@(ProjectToBuild)" StopOnFirstFailure="True"
        Properties="HostSpec=True"/>
  </Target>
</Project>