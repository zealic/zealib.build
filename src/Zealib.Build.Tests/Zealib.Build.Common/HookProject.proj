<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildProjectDirectory)\..\Test-Zealib.Build.props" />
  
  <PropertyGroup>
    <DummySourceFile>$(Test-FixtureDir)\Dummy.cs</DummySourceFile>
    <HelloWorldProjectFile>$(Test-SrcDir)\HelloWorld.csproj</HelloWorldProjectFile>
    <HelloWorldAssemblyFile>$(Test-BinDir)\HelloWorld.dll</HelloWorldAssemblyFile>
  </PropertyGroup>
  
  <Target Name="MakeAssembly">
    <ItemGroup>
      <ProjectToBuild Include="$(HelloWorldProjectFile)">
        <Properties>
          OutputPath=$(Test-BinDir);
          BaseIntermediateOutputPath=$(Test-BinDir)\obj\
        </Properties>
      </ProjectToBuild>
      <AttachClasses Include="ThisAssembly">
        <Version>1.0.0.0</Version>
      </AttachClasses>
    </ItemGroup>
    
    <HookProject Projects="@(ProjectToBuild)" SourceFiles="$(DummySourceFile)" AttachClasses="@(AttachClasses)">
      <Output TaskParameter="HookedProjects" ItemName="HookedProjects" />
    </HookProject>
    
    <MSBuild Projects="@(HookedProjects)" />
  </Target>
  
  <Target Name="Build" DependsOnTargets="MakeAssembly">
    <!-- Verify -->
    <RegisterAssemblyResolvePath BinPath="$(Test-BinDir)" />
    <RunDummy />
  </Target>
  
  <Target Name="Test" DependsOnTargets="Build">
  </Target>
  
  <UsingTask
      TaskName="RunDummy"
      TaskFactory="CodeTaskFactory"
      AssemblyFile="$(MSBuildTasks-Assembly)" >
    <Task>
      <Reference Include="$(HelloWorldAssemblyFile)" />
      <Using Namespace="System" />
      <Code Type="Method" Language="cs">
      <![CDATA[
public override bool Execute() {
  Dummy.ShowVersion();
  return true;
}]]>
      </Code>
    </Task>
  </UsingTask>
</Project>