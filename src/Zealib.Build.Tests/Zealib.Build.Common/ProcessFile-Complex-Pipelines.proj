<?xml version="1.0"?>
<Project ToolsVersion="4.0" DefaultTargets="ProcessFile-GZip+Base64+Xor" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildProjectDirectory)\..\Common.props" />
  
  <PropertyGroup>
    <DataFile>$(BuildDir)\Data.txt</DataFile>
    <ActualOutputFile>$(TargetDir)\ActualResult.bin</ActualOutputFile>
    <ActualResultFile>$(TargetDir)\ActualResult.txt</ActualResultFile>
  </PropertyGroup>
  
  <ItemGroup>
    <ProcessPipelines Include="GZip;Base64" />
    <ProcessPipelines Include="Xor">
      <Factors>1,2,3,4,5,6,7</Factors>
    </ProcessPipelines>
    <ProcessPipelines Include="Base64;Base64;GZip;Base64" />
    <ProcessPipelines Include="Xor">
      <Factors>0x12,0x55,0xFB,0xEB,0xCC,0x2E,0x9A,0xFF</Factors>
    </ProcessPipelines>
    <ProcessPipelines Include="Base64;GZip;GZip;Base64;GZip" />
  </ItemGroup>
  
  <Target Name="ProcessFile-GZip+Base64+Xor">
    <ProcessFile IsEncode="True" Pipelines="@(ProcessPipelines)"
      InputFile="$(DataFile)" OutputFile="$(ActualOutputFile)" />
    
    <!-- Verify -->
    <ProcessFile IsEncode="False" Pipelines="@(ProcessPipelines)"
      InputFile="$(ActualOutputFile)" OutputFile="$(ActualResultFile)" />
    
    <File TaskAction="GetChecksum"
      Path="$(DataFile)">
      <Output PropertyName="ExpcectedChecksum" TaskParameter="Checksum" />
    </File>
    <File TaskAction="GetChecksum"
      Path="$(ActualResultFile)">
      <Output PropertyName="ActualChecksum" TaskParameter="Checksum" />
    </File>
    
    <Message Text="ActualChecksum=$(ActualChecksum), ExpcectedChecksum=$(ExpcectedChecksum)" />
    <Error Condition="'$(ActualChecksum)' != '$(ExpcectedChecksum)'" Code="1" />
    
    <Message Text="ProcessFile-Xor successful." />
  </Target>
</Project>