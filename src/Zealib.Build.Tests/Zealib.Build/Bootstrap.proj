<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003"
    InitialTargets="GenerateSolution">
  <PropertyGroup>
    <ZealibBuildPath>$(MSBuildProjectDirectory)\..\..\Zealib.Build</ZealibBuildPath>
  </PropertyGroup>
  <Import Project="$(ZealibBuildPath)\Zealib.Build.targets" />
  
  <PropertyGroup>
    <SolutionFile>$(MSBuildProjectDirectory)\..\..\Zealib.Build.sln</SolutionFile>
    <ZealibBuild-TasksAssembly>$(TargetDir)\Zealib.Build.Tasks.dll</ZealibBuild-TasksAssembly>
  </PropertyGroup>
  
  <Target Name="GenerateSolution">
    <MSBuild Projects="$(SolutionFile)" Properties="Configuration=Debug;OutputPath=$(TargetDir)" />
  </Target>
  
  <Target Name="Build">
    <Error Condition="$(BeforeValue) != True" Text="Invalid status." Code="1" />
    <Error Condition="$(AfterValue) == True" Text="Invalid status." Code="1" />
  </Target>
  
  <Target Name="BeforeBuild">
    <PropertyGroup>
      <BeforeValue>True</BeforeValue>
    </PropertyGroup>
    <Message Text="BeforeValue = $(BeforeValue)" />
  </Target>
  
  <Target Name="AfterBuild">
    <PropertyGroup>
      <AfterValue>True</AfterValue>
    </PropertyGroup>
    <Message Text="AfterValue = $(AfterValue)" />
  </Target>
</Project>