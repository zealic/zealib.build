<?xml version="1.0"?>
<Project ToolsVersion="4.0" DefaultTargets="RegisterAssemblyResolvePath"
    xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Import Project="$(MSBuildProjectDirectory)\..\Common.props" />
  
  <Target Name="RegisterAssemblyResolvePath" DependsOnTargets="GenerateHelloWorldProject">
    <RegisterAssemblyResolvePath BinPath="$(BinDir)" />
    <SayHello />
    <Message Text="RegisterAssemblyResolvePath successful." />
  </Target>
  
  <UsingTask
      TaskName="SayHello"
      TaskFactory="CodeTaskFactory"
      AssemblyFile="$(MSBuildTasks-Assembly)" >
    <Task>
      <Reference Include="$(HelloWorldAssemblyFile)" />
      <Using Namespace="System" />
      <Code Type="Method" Language="cs">
      <![CDATA[
public override bool Execute() {
  HelloWorld.Say();
  return true;
}]]>
      </Code>
    </Task>
  </UsingTask>
</Project>